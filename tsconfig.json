{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "importHelpers": false,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2017"
    ],
    "types": [
      "node",
      "obsidian",
      "jest"
    ],
    "paths": {
      "obsidian": [
        "node_modules/obsidian/obsidian.d.ts",
        "types/obsidian.d.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "node_modules/obsidian/obsidian.d.ts",
    "tests/__types__/**/*.d.ts",
    "types/**/*.d.ts"
  ]
}
